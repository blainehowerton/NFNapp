<h1><%= @organization.name %></h1>

<br>

<p>Website: <%= @organization.website %></p>

<table class="table table-responsive">
  <tr>
  <th>ID
  <th>Edition
  <th>Ad Size
  </tr>

  Listing ads for this organization:

  <br>
  <br>
  <% @ads.each do |ad| %>
    <td><%= link_to ad.id, ad %>
    <td><%= link_to ad.edition.issue_date, ad.edition %>
    <td><%= link_to ad.adsize.ad_name, ad.adsize %>
  </tr>
    <% end %>

  </table>


<p>  
<%= link_to "Edit Organization", edit_organization_path %> | <%= link_to "New Organization", new_organization_path %> <br>
<%= button_to "Destroy", organization_path, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %>
</p>


