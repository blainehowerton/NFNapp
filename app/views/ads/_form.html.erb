<%= form_with model: ad do |form| %>


<%= bootstrap_form_for(@ad) do |f| %>
  <%= f.text_field :text %>
  <%= f.select :adsize_id, options_from_collection_for_select(@adsizes, 'id', 
      'ad_name', selected: @ad.adsize_id) %> 
  <%= f.select :organization_id, options_from_collection_for_select(@organizations, 'id', 
      'name', selected: @ad.organization_id) %> 
  <%= f.select :edition_id, options_from_collection_for_select(@editions, 'id', 
      'issue_date', selected: @ad.edition_id) %>
  <%= f.submit "Submit" %>

<% end %>

  <% ad.errors.full_messages_for(:ad).each do |message| %>
  <% end %>

<% end %>

